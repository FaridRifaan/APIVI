<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38C8A5"
    tools:context=".UserPage">

    <androidx.cardview.widget.CardView
        android:layout_width="345dp"
        android:layout_height="226dp"
        android:layout_centerInParent="true"
        android:background="@color/white"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.466">

        <LinearLayout
            android:layout_width="349dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/login_text"
                android:layout_width="247dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="26dp"
                android:gravity="center_horizontal|top"
                android:lineSpacingExtra="-24sp"
                android:text="User"
                android:textColor="#38C8A5"
                android:textSize="32sp" />

            <EditText
                android:id="@+id/email_user"
                android:layout_width="293dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="28dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="45dp"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:textColorHint="#38C8A5"
                android:textSize="25dp" />

            <View
                android:id="@+id/vector_2"
                android:layout_width="301dp"
                android:layout_height="2dp"
                android:layout_below="@+id/email_register"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/vector" />

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="149dp"
                android:layout_height="44dp"
                android:layout_below="@+id/forgot_your"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="86dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#38C8A5"
                android:elevation="4dp"
                android:text="Log out" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>